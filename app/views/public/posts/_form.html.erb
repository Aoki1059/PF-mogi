<%= form_with model: @post,local:true do |f| %>
  <%= f.file_field :image, accept: "image/*", class: "w-100" %>
  <div class="form-group">
    <%= f.label :castle, "城名" %>
    <%= f.text_field :castle, class: 'form-control', placeholder:"例：丸岡城" %>
  </div>

  <div class="form-group">
    <%= f.label :body, "見どころ" %>
    <%= f.text_area :body, class: 'form-control', placeholder:"ここにコメント" %>
  </div>

  <div class="form-group">
    <%= f.submit '投稿する', class: 'btn btn-success' %>
  </div>
<% end %>
