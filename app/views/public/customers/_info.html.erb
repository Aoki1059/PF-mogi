<table class="table table-bordered">
  <tr><%= image_tag customer.get_profile_image, size:'200x200' %></tr>
  <tr>
	  <th>会員名: <%= customer.name %></th>
  </tr>
  <tr>
	  <th>自己紹介<br><%= customer.introduction %></th>
  </tr>
  <tr>
    <th>フォロー数:<%= link_to customer.followings.count, customer_followings_path(customer.id) %></th>
  </tr>
  <tr>
    <th>フォロワー数:<%= link_to customer.followers.count, customer_followers_path(customer.id) %></th>
  </tr>
</table>

<div class="text-center">
<% unless current_customer == customer %>
  <% if current_customer.following?(customer) %>
    <%= link_to "フォロー外す", customer_relationships_path(customer.id), method: :delete %>
  <% else %>
    <%= link_to "フォローする", customer_relationships_path(customer.id), method: :post %>
  <% end %>
<% end %>
</div>

<div class="ml-5">
<% if customer == current_customer %>
  <p><%= link_to "　　　編集　　　", edit_customer_path, class: "glyphicon glyphicon-pencil btn btn-success rounded-pill" %></p>
  <p><%= link_to "　　　退会　　　", customers_unsubscribe_path, data: { confilm: "本当に退会しますか？" },class: "glyphicon glyphicon-tint btn btn-danger rounded-pill"%></p>
  <p><%= link_to "ブックマーク一覧", post_bookmarks_path(@post), class: "glyphicon glyphicon-pencil btn btn-success rounded-pill" %></p>
<% end %>
</div>