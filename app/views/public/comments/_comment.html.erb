<tr id="comment__line--<%= comment.id %>" >
  <td>
    <%= link_to customer_path(comment.customer) do %>
      <%= comment.customer.name %>
    <% end %>
  </td>
  <td class="">: <%= comment.comment %></td>
  <td class="text-right">
    <% if comment.customer == current_customer %>
      <%= link_to "削除", comment_path(comment), method: :delete, class: "btn btn-danger pull-right", remote: true %>
    <% end %>
  </td>
</tr>