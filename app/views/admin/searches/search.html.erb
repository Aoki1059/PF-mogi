<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <% if @range == "会員名" %>
        <h2>"<%= @text %>"の検索結果</h2>
        <div class="container px-5 px-sm-0">
          <div class="row" style="margin-top:25px;">
            <div class="col-sm-8 px-sm-0 offset-sm-1">
              <h4>会員一覧</h4>
            </div>
            <div class="col-sm-10 px-sm-0 mx-auto mb-5">
            <table class="table table-hover">
              <thead class="table-active">
                <tr>
                  <th>会員ID</th>
                  <th>名前</th>
                  <th>メールアドレス</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @customers.each do |customer| %>
                <tr>
                  <td><%= customer.id %></td>
                  <td><%= link_to customer.name, admin_customer_path(customer), class: "text-dark font-weight-bold" %></td>
                  <td><%= customer.email %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
            </div>
          </div>
        </div>
      <% else %>
        <h2>"<%= @text %>"の検索結果</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>城名</th>
              <th>感想</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td class="text-center">
                  <%= link_to admin_post_path(post.id) do %>
                    <%= image_tag post.image, size: "100x100" %>
                  <% end %>
                </td>
                <td class="pt-5"><%= post.customer.name %></td>
                </td>
                <td class="pt-5"><%= post.castle %></td>
                <td class="pt-5 text-truncate" style="max-width: 150px;">
                  <%= post.body %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
<div style="position: fixed; bottom: 100px; margin-left: 375px;">
  <% if @range == "会員名" %>
    <%= paginate @customers %>
  <% else %>
    <%= paginate @posts %>
  <% end %>
</div>