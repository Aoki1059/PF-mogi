<table class="table table-hover table-inverse">
  <% if @range == "会員名" %>
    <h2>"<%= @text %>"の検索結果</h2>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= image_tag customer.get_profile_image, size: '50x50' %></td>
          <td><%= customer.name %></td>
          <td><%= link_to '会員詳細', customer %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <h2>"<%= @text %>"の検索結果</h2>
    <thead>
      <tr>
        <th>会員名</th>
        <th>城名</th>
        <th>投稿文</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to(post.customer) do %>
            <%= image_tag post.customer.get_profile_image, size:'50x50' %>
            <% end %>
          </td>
          <td><%= link_to post.castle,post %></td>
          <td><%= post.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>