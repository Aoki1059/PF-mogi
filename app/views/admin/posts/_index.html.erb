<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>城名</th>
      <th>見どころ</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to admin_post_path(post.id) do %>
            <%= image_tag post.image, size: "100x100" %>
          <% end %>
        </td>
        <td><%= post.castle %></td>
        <td><%= post.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="mx-auto font-weight-bold" style="width:200px;">
  <%= paginate @posts %>
</div>