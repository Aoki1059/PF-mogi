<div class='container px-5 px-sm-0'>
  <div class='row' style="margin-top:25px;">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h4 class="font-weight-bold">投稿一覧</h4>
    </div>
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
    <table class='table table-hover'>
      <thead class="table-active">
        <tr>
          <th></th>
          <th>会員名</th>
          <th>城名</th>
          <th>見どころ</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
        <tr>
          <td class="text-center">
            <%= link_to admin_post_path(post.id) do %>
              <%= image_tag post.image, size: "100x100" %>
            <% end %>
          </td>
          <td class="pt-5"><%= post.customer.name %></td>
          </td>
          <td class="pt-5"><%= post.castle %></td>
          <td class="pt-5 text-truncate" style="max-width: 150px;">
            <%= post.body %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="mx-auto font-weight-bold" style="width:200px;">
      <%= paginate @posts %>
    </div>
    </div>
  </div>
</div>
